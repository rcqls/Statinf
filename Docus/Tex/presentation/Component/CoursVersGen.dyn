\begin{frame}
\frametitle{Hypothèses de test pour les trois problématiques}
{\small
\begin{center}
\begin{tabular}{|c|c|c|}
\hline
\multicolumn{3}{|c|}{\textbf{\color{blue}Problématique et cadre}} \\
\hline
\textbf{Produit $\bullet$} ($n$ grand) & \textbf{Dictée} ($n$ faible) & \textbf{Technicien} ($n$ faible) \\
Pas d'hyp. & Hyp: $Y_i^D\leadsto \mathcal{N}(\mu^D,\sigma_D)$ & Hyp: $Y_i^C\leadsto \mathcal{N}(\mu^C,\sigma_C)$ \pause\\
\hline \hline 
\multicolumn{3}{|c|}{\textbf{\color{blue}Paramètre d'écart}} \\
\hline \pause
$\delta_{\mu^\bullet,0.15}$ & $\delta_{\mu^D,6.3}=\frac{\mu^D-6.3}{\sqrt{\frac{\sigma_D^2}n}}$ & $\delta_{\sigma_C^2,0.1}=(n-1)\frac{\sigma_C^2}{0.1}$\pause\\
\hline \hline
\multicolumn{3}{|c|}{\textbf{\color{blue}Assertion d'intérêt}} \\
\hline \pause
$\mathbf{H_1}: \mu^\bullet>0.15$ & $\mathbf{H_1}: \mu^D\neq 6.3$ & $\mathbf{H_1}: \sigma_C^2<0.1$ \\
$\Leftrightarrow \delta_{\mu^\bullet,0.15}>0$& $\Leftrightarrow \delta_{\mu^D,6.3}\neq 0$ &$\Leftrightarrow \delta_{\sigma_C^2,0.1}<(n-1)$ \pause\\
\hline \hline 
\multicolumn{3}{|c|}{\textbf{\color{blue}Pire des mauvaises situations}} \\
\hline \pause
$\mathbf{H_0}: \mu^\bullet=0.15$ & $\mathbf{H_0}: \mu^D= 6.3$ & $\mathbf{H_0}: \sigma_C^2=0.1$ \\
$\Leftrightarrow \delta_{\mu^\bullet,0.15}=0$& $\Leftrightarrow \delta_{\mu^D,6.3}= 0$ &$\Leftrightarrow \delta_{\sigma_C^2,0.1}=(n-1)$ \\
\hline
\end{tabular}

\end{center}
}
\end{frame}


\begin{frame}
\frametitle{Statistique de test (sous $\mathbf{H_0}$)}

{\small
\hspace*{-.3cm}\begin{tabular}{|c|c|c|}
\hline
\multicolumn{3}{|c|}{\textbf{\color{blue} Assertion d'intérêt}} \\
\hline
Produit $\bullet$ & Dictée & Technicien\\
$\mathbf{H_1}: \mu^\bullet>0.15$ & $\mathbf{H_1}: \mu^D\neq 6.3$ & $\mathbf{H_1}: \sigma_C^2<0.1$ \\
\hline \hline 
\multicolumn{3}{|c|}{\textbf{\color{blue}Statistique de test}} \\
\hline \pause
$\Est{\delta_{\mu^\bullet,0.15}}{Y^\bullet}$ & {\scriptsize$\Est{\delta_{\mu^D,6.3}}{Y^D}=\frac{\Est{\mu^D}{Y^D}-6.3}{\sqrt{\frac{\Est{\sigma_D^2}{Y^D}}n}}$}& $\Est{\delta_{\sigma^2_C,0.1}}{Y^C}=(n-1)\frac{\Est{\sigma_C^2}{Y^C}}{0.1}$ \pause\\
\hline \hline 
\multicolumn{3}{|c|}{\textbf{\color{blue}Comportement aléatoire sous $\mathbf{H_0}$}} \\
\hline \pause
%$\Est{\delta_{\mu^\bullet,0.15}}{Y^\bullet}$
$\SuitApprox \mathcal{N}(0,1)$ &  $\Est{\delta_{\mu^D,6.3}}{Y^D} \leadsto \mathcal{S}t(n-1)$ & $\Est{\delta_{\sigma^2_C,0.1}}{Y^C}\leadsto \chi^2(n-1)$\pause\\
\hline\hline
\multicolumn{3}{|c|}{\textbf{\color{blue}Règles de décision : accepter $\mathbf{H_1}$ si}} \\ \hline \pause
$\Est{\delta_{\mu^\bullet,0.15}}{y^\bullet}>\delta_{lim,\alpha}^+$& $\Est{\delta_{\mu^D,6.3}}{y^D}<\delta_{lim,\alpha/2}^-$ 
& $\Est{\delta_{\sigma_C^2,0.1}}{y^\bullet}<\delta_{lim,\alpha}^-$ \\
& $\Est{\delta_{\mu^D,6.3}}{y^D}>\delta_{lim,\alpha/2}^+$ &\\
\hline

\end{tabular}

}
\end{frame}

